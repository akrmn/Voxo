                 base         >= 4.8    && < 4.9,
                 binary       >= 0.7.5  && < 0.7.6,
                 bytestring   >= 0.10.6 && < 0.10.7,
                 colour       >= 2.3.3  && < 2.3.4,
                 containers   >= 0.5.6  && < 0.5.7,
                 ghc          >= 7.10.3 && < 7.10.4,
                 lens         >= 4.14   && < 4.15,
                 repa         >= 3.4.1  && < 3.4.2,
                 semigroups   >= 0.18.2 && < 0.18.3,
                 transformers >= 0.4.2  && < 0.4.3

  -- Directories containing source files.
  -- hs-source-dirs:

  -- Base language which the package is written in.
  default-language:    Haskell2010

executable voxo-test
  hs-source-dirs: src
  main-is:        Test.hs
  build-depends:  base >= 4.8 && < 4.9,
                  vox
  default-language:    Haskell2010
