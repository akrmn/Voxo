                 bytestring   >= 0.10   && < 0.11,
                 colour       >= 2.3.3  && < 2.3.4,
                 containers   >= 0.5    && < 0.6,
                 ghc          >= 8.0    && < 8.2,
                 lens         >= 4.15   && < 4.16,
                 linear       >= 1.20   && < 1.21,
                 repa         >= 3.4.1  && < 3.4.2,
                 semigroups   >= 0.18   && < 0.19,
                 transformers >= 0.5    && < 0.6

