  -- hs-source-dirs:

  -- Base language which the package is written in.
  default-language:    Haskell2010

executable voxo-main
  hs-source-dirs: src
  main-is:        Main.hs
  build-depends:  base >= 4.9 && < 4.10,
                  recursion-schemes >= 5.0 && < 6.0,
                  vox
  default-language:    Haskell2010
